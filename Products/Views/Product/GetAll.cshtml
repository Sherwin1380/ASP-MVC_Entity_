@model Products.Models.Product

@{
    ViewBag.Title = "GetAll";
}

<h2>List of Products</h2>


@using (Html.BeginForm("Search","Product", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <div class="input-group">
                        @Html.Label("PRODUCT       :  ")
                        <input type="text" class="text-primary" name="search" id="search"/>
                        <input type="submit" value="Search" style="margin:5px" class="btn btn-success " />
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    
                </div>
            </div>
        </div>
    </div>
}  


<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.supplier)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.supplier)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
