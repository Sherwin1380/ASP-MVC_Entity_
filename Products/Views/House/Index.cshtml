@model IEnumerable<Products.Models.House>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Session["Username"] == null)
    { Response.Redirect("~/Login/Create",false); }
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.housename)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.housename)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.houseid }) |
            @Html.ActionLink("Details", "Details", new { id=item.houseid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.houseid })
        </td>
    </tr>
}

</table>
